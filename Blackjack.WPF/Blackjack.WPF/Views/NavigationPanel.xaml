<UserControl x:Class="Blackjack.WPF.Views.NavigationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Blackjack.WPF.ViewModels"
             x:Name="Root">

    <Grid>
        <!-- Navigation Panel -->
        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1C1C1C" Offset="0"/>
                    <GradientStop Color="#3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border HorizontalAlignment="Right"
                Width="6">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#00000000" Offset="0"/>
                    <GradientStop Color="#101010" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Blackjack"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0">
            </TextBlock>

            <Rectangle Height="1"
                       Fill="#55FFFFFF"
                       Margin="5,5,5,0">
            </Rectangle>
            
            <!-- Home Button -->
            <Grid>
                <Button Content="Home"
                        Command="{Binding NavigateHomeCommand}"
                        Height="30"
                        Margin="10,15,10,0"
                        FontSize="14"
                        FontWeight="Bold">
                </Button> 

                <Rectangle Fill="#40FFFFFF"
                            Margin="10,15,10,0">
                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHomeView}"
                                             Value="True">
                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
                
            </Grid>

            <!-- Game Button -->
            <Grid>
                <Button Content="Game"
                        Command="{Binding NavigateGameCommand}"
                        Height="30"
                        Margin="10,15,10,0"
                        FontSize="14"
                        FontWeight="Bold">
                </Button>

                <Rectangle Fill="#40FFFFFF"
                           Margin="10,15,10,0">
                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="Visibility" Value="Collapsed"></Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGameView}"
                                             Value="True">
                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
            </Grid>

        </StackPanel>
        
    </Grid>

</UserControl>