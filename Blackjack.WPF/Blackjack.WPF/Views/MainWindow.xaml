<Window x:Class="Blackjack.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack.WPF"
        xmlns:views="clr-namespace:Blackjack.WPF.Views"
        mc:Ignorable="d"
        Title="Blackjack" Height="550" Width="900">

    <Window.Background>
        <ImageBrush ImageSource="/Assets/background.jpg"/>
    </Window.Background>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <views:NavigationPanel Grid.Column="0"></views:NavigationPanel>
    </Grid>

</Window>
