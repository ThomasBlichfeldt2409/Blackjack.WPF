<UserControl x:Class="Blackjack.WPF.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Blackjack.WPF.Views"
             mc:Ignorable="d">

    <Grid>
        <!-- Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Casino Message -->
        <Border Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                Margin="10,10,0,0"
                CornerRadius="8"
                BorderThickness="2"
                BorderBrush="Black">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1C1C1C" Offset="0"/>
                    <GradientStop Color="#3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   Margin="20, 15, 0, 0"
                   Text="Casino Message:"
                   Foreground="WhiteSmoke"
                   FontSize="16"
                   FontWeight="Bold">
        </TextBlock>

        <TextBox Grid.Column="0"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 Margin="20,5,10,10"
                 Background="WhiteSmoke"
                 BorderThickness="1"
                 BorderBrush="Black"
                 VerticalContentAlignment="Top"
                 TextWrapping="Wrap"
                 IsReadOnly="true"
                 Focusable="False"
                 Cursor="Arrow">
        </TextBox>

        <!-- Table Overview -->
        <Border Grid.Column="0"
                Grid.Row="3"
                Grid.RowSpan="3"
                Grid.ColumnSpan="2"
                Margin="10,10,0,0"
                CornerRadius="8"
                BorderThickness="2"
                BorderBrush="Black">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1C1C1C" Offset="0"/>
                    <GradientStop Color="#3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Grid.Column="0"
                   Grid.Row="3"
                   Grid.ColumnSpan="2"
                   Margin="20, 15, 0, 0"
                   Text="Table Overview:"
                   Foreground="WhiteSmoke"
                   FontSize="16"
                   FontWeight="Bold">
        </TextBlock>

        <ListView Grid.Column="0"
                  Grid.Row="4"
                  Grid.ColumnSpan="2"
                  Margin="20,5,10,10"
                  SelectionMode="Single"
                  ItemsSource="{Binding TablePlayers}"
                  SelectedItem="{Binding SelectedTablePlayer}">

            <!-- Header Styling -->
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader"
                       BasedOn="{StaticResource CasinoGridViewHeaderStyle}">
                </Style>
            </ListView.Resources>

            <!-- Item Styling -->
            <ListView.ItemContainerStyle>
                <StaticResource ResourceKey="CasinoListViewItemStyle"/>
            </ListView.ItemContainerStyle>

            <!-- Content -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"
                                    DisplayMemberBinding="{Binding Name}"
                                    Width="150">
                    </GridViewColumn>
                    <GridViewColumn Header="Bank $"
                                    Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Bank}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Total $"
                                    Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Total}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Column="0"
                Grid.Row="5"
                Margin="20,0,5,10"
                Content="Remove"
                FontSize="12"
                Background="FireBrick"
                BorderBrush="FireBrick"
                Command="{Binding RemoveTablePlayerCommand}">
        </Button>

        <!-- Active Players -->
        <Border Grid.Column="3"
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.ColumnSpan="3"
                Margin="10,10,20,0"
                CornerRadius="8"
                BorderThickness="2"
                BorderBrush="Black">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1C1C1C" Offset="0"/>
                    <GradientStop Color="#3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Grid.Column="3"
                   Grid.Row="0"
                   Grid.ColumnSpan="3"
                   Margin="20, 15, 0, 0"
                   Text="Active Players:"
                   Foreground="WhiteSmoke"
                   FontSize="16"
                   FontWeight="Bold">
        </TextBlock>

        <ListView Grid.Column="3"
                  Grid.Row="1"
                  Grid.ColumnSpan="3"
                  Margin="20,5,30,10"
                  SelectionMode="Single"
                  ItemsSource="{Binding AllPlayers}"
                  SelectedItem="{Binding SelectedPlayer}">

            <!-- Header Styling -->
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader"
                       BasedOn="{StaticResource CasinoGridViewHeaderStyle}">
                </Style>
            </ListView.Resources>

            <!-- Item Styling -->
            <ListView.ItemContainerStyle>
                <StaticResource ResourceKey="CasinoListViewItemStyle"/>
            </ListView.ItemContainerStyle>

            <!-- Content -->
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name"
                                    DisplayMemberBinding="{Binding Name}"
                                    Width="150">
                    </GridViewColumn>
                    <GridViewColumn Header="Bank $"
                                    Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Bank}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="+Max $"
                                    Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BiggestWin}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="-Max $"
                                    Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BiggestLoose}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Total $"
                                    Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Total}"
                                           HorizontalAlignment="Center">
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Column="3"
                Grid.Row="2"
                Margin="20,5,5,5"
                Content="Create"
                FontSize="12"
                Background="SeaGreen"
                BorderBrush="SeaGreen"
                Command="{Binding OpenCreatePlayerCommand}">
        </Button>

        <Button Grid.Column="3"
                Grid.Row="3"
                Margin="20,0,5,10"
                Content="Delete"
                FontSize="12"
                Background="FireBrick"
                BorderBrush="FireBrick"
                Command="{Binding DeletePlayerCommand}">
        </Button>

        <Button Grid.Column="4"
                Grid.Row="2"
                Margin="5,5,15,5"
                Content="Get Money"
                FontSize="12"
                Background="Goldenrod"
                BorderBrush="Goldenrod">
        </Button>

        <Button Grid.Column="4"
                Grid.Row="3"
                Margin="5,0,15,10"
                Content="Add to Table"
                FontSize="12"
                Background="SteelBlue"
                BorderBrush="SteelBlue">
        </Button>

    </Grid>

</UserControl>