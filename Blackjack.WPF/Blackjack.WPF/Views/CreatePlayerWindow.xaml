<Window x:Class="Blackjack.WPF.Views.CreatePlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blackjack.WPF.Views"
        mc:Ignorable="d"
        Title="Create New Player" Height="160" Width="320" WindowStartupLocation="CenterOwner">

    <Grid>
        <!-- Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.ColumnSpan="3"
                Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1C1C1C" Offset="0"/>
                    <GradientStop Color="#3A3A3A" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="Name:"
                   Foreground="WhiteSmoke"
                   Margin="10,10,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="14">
        </TextBlock>

        <TextBox Grid.Column="1"
                 Grid.Row="0"
                 Grid.ColumnSpan="2"
                 Margin="0,10,10,0"
                 Background="WhiteSmoke"
                 FontSize="14"
                 Height="30"
                 VerticalAlignment="Center"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>

        <Button Grid.Column="0"
                Grid.Row="1"
                Margin="10,10,10,0"
                Content="Create"
                FontSize="12"
                Background="SeaGreen"
                BorderBrush="SeaGreen"
                Command="{Binding CreateCommand}">
        </Button>

        <Button Grid.Column="1"
                Grid.Row="1"
                Margin="10,10,10,0"
                Content="Cancel"
                FontSize="12"
                Background="FireBrick"
                BorderBrush="FireBrick"
                Command="{Binding CancelCommand}">
        </Button>

    </Grid>
</Window>
