<Application 
    x:Class="Blackjack.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:Blackjack.WPF"
    xmlns:vm="clr-namespace:Blackjack.WPF.ViewModels"
    xmlns:views="clr-namespace:Blackjack.WPF.Views"
    StartupUri="Views/MainWindow.xaml">
    
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="DeepPurple" SecondaryColor="Teal" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />

                <ResourceDictionary Source="Styles/ListViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView></views:HomeView>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:GameViewModel}">
                <views:GameView></views:GameView>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
    
</Application>
